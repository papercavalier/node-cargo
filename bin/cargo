#!/usr/bin/env node

const http = require('http');
const { Server } = require('socket.io');
const scale = require('dymo-scale');
const exec = require('child_process').exec;
const fs = require('fs');

// Create HTTP server
const server = http.createServer();

// Attach Socket.IO
const io = new Server(server, {
  cors: {
    origin: "*"
  }
});

// Start listening
server.listen(8080, () => {
  console.log('node-cargo listening on http://localhost:8080');
});

io.on('connection', (socket) => {
  console.log('Client connected');

  let poll;

  const startPolling = () => {
    poll = setTimeout(function readScale() {
      scale.read((err, data) => {
        if (!err && data) {
          socket.emit('scale', data.value);
        }
        poll = setTimeout(readScale, err ? 2000 : 100);
      });
    }, 0);
  };

  startPolling();

  socket.on('disconnect', () => {
    console.log('Client disconnected');
    if (poll) clearTimeout(poll);
  });

  socket.on('printer', (data) => {
    const path = '/tmp/' + Date.now();
    const binaryData = Buffer.from(data, 'base64');

    fs.writeFile(path, binaryData, (err) => {
      if (err) return;

      exec(`lpr -l ${path}`, () => {
        fs.unlink(path, () => {});
      });
    });
  });
});
